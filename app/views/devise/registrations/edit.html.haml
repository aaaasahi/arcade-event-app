.container
  .profile-title.mt-5
    %h4 ユーザー情報変更
  .row
    .left-content.col-9.mt-5
      .card
        .card-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = render "devise/shared/error_messages", resource: resource
            .label
              = f.label :email
            .form
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form"
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %div
                Currently waiting confirmation for: #{resource.unconfirmed_email}
            .label
              = f.label :password
            .form
              = f.password_field :password, autocomplete: "new-password", class: "form-control form"
            .label
              = f.label :password_confirmation
            .form
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form"
            .mt-5.mb-3
              = f.submit "変更する", class: "btn btn-success  btn-lg post-button"
    
    .right-content.col-3.mt-5 
      = render 'commons/link' 