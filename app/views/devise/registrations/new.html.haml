.container
  - breadcrumb :user_signin
  = breadcrumbs separator: " &rsaquo; "
  .row
    .col-md-6.offset-md-3
      .card.login
        .card-body
          %h2.login-title= I18n.t('auth.new')
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form"
            .field
              = f.label :password
              %br/
              = f.password_field :password, autocomplete: "new-password", class: "form-control form"
            .field
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form"
            .actions
              = f.submit I18n.t('auth.new'), class: "btn btn-success w-100 login-button"
          .row.mt-2
            .col-12.col-lg-6.mb-2
              = link_to I18n.t('auth.guests'), users_guest_sign_in_path, method: :post, class: "btn btn-primary w-100"
            .col-12.col-lg-6
              = link_to I18n.t('auth.login'),new_user_session_path, class: "btn btn-danger w-100"
