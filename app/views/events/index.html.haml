.container
  .title
    %h2 Topページ予定
  .row 
    - @events.each do |event|
      .card-container.col-12.col-md-6.col-lg-3
        = link_to event_path(event) do
          .card.card-main
            = image_tag event.eyecatch_image, class: 'card-image-top card-image'
            .card-body
              %h5.card-title 
                = event.name
              %p.card-text 
                = event.text