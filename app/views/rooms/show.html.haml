.container 
  .title
    %h2 
      = ("#{@another.user.display_name}さんとのメッセージ")

  .card
    .card-body.chats
      .chat
        - @messages.each do |m|
          - if m.user_id == current_user.id
            .mycomment
              %p 
                = m.body
          - else 
            .fukidasi
              .faceicon 
                = image_tag m.user.avatar_image
              .chatting
                .says
                  %p 
                    = m.body
    %hr
    .chat-form-box.mb-4.mt-3
      = form_for @message do |f|
        .chat-form-group
          = f.text_field :body, :placeholder => "メッセージを入力して下さい" ,class: 'form-control chat-form'
          = f.hidden_field :room_id, :value => @room.id
          = f.submit "送信する", class: 'btn btn-outline-success ml-3'